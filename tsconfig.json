{
    "compilerOptions": {
        "noImplicitThis": false,
        "strict": true,
        "target": "es2017",
        "module": "esnext",
        "sourceMap": false,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": true,
        "baseUrl": "src/",
        "outDir": "build"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
